FROM python:3.11

# Install curl for health checks
RUN apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/*

WORKDIR /app
# Copy both base and dev requirement sets so dev install can extend base without recursion
COPY requirements.txt requirements-dev.txt ./
RUN pip install -r requirements-dev.txt
COPY . .

# Set environment variable to disable frozen modules validation
ENV PYDEVD_DISABLE_FILE_VALIDATION=1

# Start command that allows debugging but doesn't wait for client
CMD ["python", "-Xfrozen_modules=off", "-m", "debugpy", "--listen", "0.0.0.0:5678", "-m", "uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]

