FROM node:20

# Install curl for health checks
RUN apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/*

WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .

# Expose Vite dev server port and debug port
EXPOSE 5173 9229

CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "5173"]
